<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:background="@mipmap/img_detail"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <TextView
            android:id="@+id/page_name"
            android:textSize="@dimen/text_x_big"
            android:textColor="@android:color/white"
            android:text="XXX,欢迎你！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_x_normal"
            android:textColor="@android:color/white"
            android:layout_below="@+id/page_name"
            android:text="5月10日·星期三"
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_small"
            android:textColor="@android:color/white"
            android:text="每天给自己一个希望，只为更好的明天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="@dimen/text_normal"
            android:text="上班班次:--"
            android:textColor="@color/normal_text_color"
            android:id="@+id/tv_work_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/text_normal"
            android:text="操作人员:--"
            android:id="@+id/tv_worker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/normal_text_color"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_normal"
            android:text="工　　号:--"
            android:id="@+id/tv_worker_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/normal_text_color"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_normal"
            android:text="下班时间:--"
            android:id="@+id/tv_work_over_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sign"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:background="@drawable/shape_bt_bg"
        android:text="上班"
        android:textColor="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <TextView
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/text_small"
        android:id="@+id/tv_sign_tip"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/sign_tip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>